		<script>
			const telefono = "573053012530";
			const urlmap = `https://www.google.com/maps/place/construproyectosvm/@3.4639172,-76.5316519,17z/data=!3m1!4b1!4m6!3m5!1s0x8e30a754b41e10fd:0x4afb32685d4c7c0f!8m2!3d3.4639172!4d-76.5316519!16s%2Fg%2F11xsn611pr?hl=es-419&entry=ttu&g_ep=EgoyMDI1MDgxMy4wIKXMDSoASAFQAw%3D%3D`;
			const mensajes = {
				facebook: "Hola, vi una publicación en Facebook y me gustaría recibir más información, por favor.",
				instagram: "Hola, encontré su contenido en Instagram y quiero saber más detalles.",
				tiktok: "Hola, vi un video en TikTok y estoy interesad@ en la información.",
				default: "Hola, estoy interesad@ en la información"
			};

			const ref = document.referrer.toLowerCase();
			let mensaje = mensajes.default;

			if (ref.includes("facebook.com")) {
				mensaje = mensajes.facebook;
			} else if (ref.includes("instagram.com")) {
				mensaje = mensajes.instagram;
			} else if (ref.includes("tiktok.com")) {
				mensaje = mensajes.tiktok;
			}

			const urlWhatsapp = `https://wa.me/${telefono}?text=${encodeURIComponent(mensaje)}`;
			const whatsappLink = document.getElementById("icon-whatsapp-link");
			if (whatsappLink) {
				whatsappLink.setAttribute("href", urlWhatsapp);
			}
			const whatsappLink2 = document.getElementById("url-whatsapp");
			if (whatsappLink2) {
				whatsappLink2.setAttribute("href", urlWhatsapp);
			}
			const mapsLink = document.getElementById("url-mapa");
			if (mapsLink) {
				mapsLink.setAttribute("href", urlmap);
			}
			</script>
